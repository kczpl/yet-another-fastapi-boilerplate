# Application Settings
ENVIRONMENT=development
VERSION=0.0.1
TIMEZONE=UTC
LOG_LEVEL=INFO

# Domains (auto-configured per environment, can be overridden)
API_DOMAIN=localhost:8000
FRONTEND_DOMAIN=localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/myapp

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# AWS Services
AWS_REGION=eu-central-1
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
SES_DOMAIN=mail.staging.example.com
S3_BUCKET_NAME=your-s3-bucket
S3_PUBLIC_BUCKET_NAME=your-public-s3-bucket

# Sentry (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# OpenAI (optional)
OPENAI_API_KEY=sk-your-openai-api-key

# Twilio (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# VAPI (optional)
VAPI_API_KEY=your-vapi-api-key
VAPI_AUTH_KEY=your-vapi-auth-key
VAPI_WEBHOOK_SECRET=your-vapi-webhook-secret

# Encryption (optional)
ENCRYPTION_SECRET_KEY=your-encryption-secret-key
ENCRYPTION_SALT=your-encryption-salt

# Kontomatik (optional)
KONTOMATIK_API_KEY=your-kontomatik-api-key

# CEIDG (optional)
CEIDG_TOKEN=your-ceidg-token

# Twenty (optional)
TWENTY_API_KEY=your-twenty-api-key

# GCP Document AI (optional)
GCP_DOCUMENT_AI_API_KEY_BASE64=your-base64-encoded-gcp-key
